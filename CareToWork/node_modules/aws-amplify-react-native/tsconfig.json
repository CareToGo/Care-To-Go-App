{
	"compilerOptions": {
		"strict": false,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react-native",
		"noUnusedLocals": true
	},
	"include": [".eslintrc.js", "jest.config.js", "babel.config.js", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
	"exclude": ["node_modules"]
}
